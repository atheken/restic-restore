    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Server",
            "runtimeExecutable": "tsx",
            "runtimeArgs": [
                "--watch",
                "."
            ],
            "cwd": "${workspaceFolder}/src/api",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug App",
            "runtimeExecutable": "vite",
            "cwd": "${workspaceFolder}/src/ui",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Debug All",
            "configurations": [
                "Debug Server",
                "Debug App"
            ]
        }
    ]
}